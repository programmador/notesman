{% extends "layout.twig" %}

{% block title %}
    {% if task is defined %}
        Edit task
    {% else %}
        Create task
    {% endif %}
{% endblock %}

{% block content %}

    <form action="/task/save" method="POST">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>User email:</td>
                    <td><input type="text" name="user_email"></td>
                </tr>
                <tr>
                    <td>User name:</td>
                    <td><input type="text" name="user_name"></td>
                </tr>
                <tr>
                    <td>Task description:</td>
                    <td><input type="text" name="task_description"></td>
                </tr>
            </tbody>
        </table>

        <input type="submit" class="btn btn-primary" value="Save">
        <a href="/" class="btn btn-link">Back to task list</a>
    </form>

{% endblock %}